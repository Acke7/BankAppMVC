@page
@model RegisterModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex align-items-center" style="min-height: 100vh;">
    <div class="row justify-content-center w-100">
        <div class="col-12" style="max-width: 25rem;">
            <!-- Heading -->
            <h1 class="fs-1 text-center">Sign up</h1>

            <!-- Subheading -->
            <p class="lead text-center text-body-secondary">Join our platform and take control of your workflow.</p>

            <!-- ASP.NET Identity Register Form -->
            <form class="mb-5" asp-route-returnUrl="@Model.ReturnUrl" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="mb-4">
                    <label class="visually-hidden" asp-for="Input.Email">Email Address</label>
                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Enter your email address..." />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="visually-hidden" asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Enter your password..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="visually-hidden" asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password..." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label d-block">Select Role</label>
                    <div class="form-check">
                        <input asp-for="Input.UserRole" type="radio" value="Admin" class="form-check-input" id="adminRadio" />
                        <label class="form-check-label" for="adminRadio">Administrator</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Input.UserRole" type="radio" value="Cashier" class="form-check-input" id="cashierRadio" />
                        <label class="form-check-label" for="cashierRadio">Cashier</label>
                    </div>
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="btn btn-secondary w-100">Sign up</button>
            </form>

            <!-- Text -->
            <p class="text-center text-body-secondary mb-0">
                Already have an account?
                <a asp-page="/Account/Login">Sign in</a>.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
