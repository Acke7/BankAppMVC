@model BankAppMVC.Models.ViewModels.CustomerProfileViewModel?


<form asp-action="FindByCustomerId" method="post" class="mb-4">
    
        <div class="input-group">
            <input type="number" name="id" class="form-control" placeholder="Enter Customer ID..." required />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    
</form>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert">
        <strong>@TempData["Error"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (Model == null)
{
    <div class="text-center mt-5">
        <h5 class="text-muted">Please enter a customer ID to view their profile.</h5>
    </div>
    return;
}



 @if (Model != null )
{
    <main class="main px-lg-6">
        <!-- Content -->
        <div class="container-lg">
            <!-- Page content -->
            <div class="row">
                <div class="col-12 col-xxl-4">

                    <div class="position-sticky mb-8" style="top: 40px">

                        <!-- Card -->
                        <div class="card bg-body mb-3">
                            <!-- Image -->
                            <div class="card-img-top pb-13" style="background: no-repeat url('/img/backgrounds/background-1.jpg') center center / cover;"></div>

                            <!-- Avatar -->
                            <div class="avatar avatar-xl rounded-circle mt-n7 mx-auto">
                                <img class="avatar-img border border-white border-3" src="~/img/photos/photo-6.jpg" alt="..." />
                            </div>

                            <!-- Body -->
                            <div class="card-body text-center">
                                <!-- Heading -->
                                <h1 class="card-title fs-5">@Model.FullName</h1>

                                <!-- List -->
                                <ul class="list-group list-group-flush mb-0">
                                    <li class="list-group-item d-flex align-items-center justify-content-between bg-body px-0">
                                        <span class="text-body-secondary">Gender</span>
                                        <span>@(string.IsNullOrWhiteSpace(Model.Gender) ? "N/A" : Model.Gender)</span>
                                    </li>
                                    <li class="list-group-item d-flex align-items-center justify-content-between bg-body px-0">
                                        <span class="text-body-secondary">Phone</span>
                                        <span>@(string.IsNullOrWhiteSpace(Model.Phone) ? "Phone not available" : Model.Phone)</span>
                                    </li>
                                    <li class="list-group-item d-flex align-items-center justify-content-between bg-body px-0">
                                        <span class="text-body-secondary">Email</span>
                                        <span>@(string.IsNullOrWhiteSpace(Model.Emailaddress) ? "Email not provided" : Model.Emailaddress)</span>
                                    </li>
                                    <li class="list-group-item d-flex align-items-center justify-content-between bg-body px-0">
                                        <span class="text-body-secondary">National ID</span>
                                        <span>@(string.IsNullOrWhiteSpace(Model.NationalId) ? "N/A" : Model.NationalId)</span>
                                    </li>
                                    <li class="list-group-item d-flex flex-column align-items-start bg-body px-0">
                                        <span class="text-body-secondary">Address</span>
                                        @if (string.IsNullOrWhiteSpace(Model.FullAddress))
                                        {
                                            <span>Address not provided.</span>
                                        }
                                        else
                                        {
                                            var parts = Model.FullAddress.Split(",");
                                            <span>@parts[0]</span> <!-- Street address -->
                                            @if (parts.Length > 1)
                                            {
                                                <span>@parts[1]</span> <!-- Zip + City -->
                                            }
                                            @if (parts.Length > 2)
                                            {
                                                <span>@parts[2]</span> <!-- Country (CountryCode) -->
                                            }
                                        }
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xxl ms-xxl-13">
                    <div class="row dtr-mt-80 gx-4 gy-4">
                        @foreach (var acc in Model.Accounts)
                        {
                            <div class="col-12 col-md-6 col-xl-8">
                                <!-- Wider card -->
                                <div class=" card h-100 shadow-lg rounded-4 bg-body text-center" style="min-height: 500px;">
                                    <!-- Taller card -->
                                    <div class="card-body py-5 px-5 fs-5 d-flex flex-column justify-content-around h-100">
                                        <!-- Bigger padding and font -->
                                        <p class="fs-sm text-uppercase text-muted mb-1">Account ID</p>
                                        <a asp-controller="Account" asp-action="Details" asp-route-accountId="@acc.AccountId" class="btn btn-outline-primary fw-bold mb-4">
                                            @acc.AccountId
                                        </a>

                                        <p class="fs-sm text-uppercase text-muted mb-1">Frequency</p>
                                        <h4 class="fw-bold text-body-secondary mb-4">@acc.Frequency</h4>

                                        <p class="fs-sm text-uppercase text-muted mb-1">Created Date</p>
                                        <h4 class="fw-bold text-body-secondary mb-4">@acc.FormattedCreated</h4>

                                        <p class="fs-sm text-uppercase text-muted mb-1">Balance</p>
                                        <h4 class="fw-bold text-body-secondary">@acc.FormattedBalance</h4>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

        </div>
    </main>
}




