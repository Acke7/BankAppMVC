@using BankAppMVC.Models.ViewModels
@using BankAppMVC.Models.ViewModels.AccountVm
@model WithdrawViewModel

<form asp-action="Withdraw" method="post">
    <!-- Account Number (Hidden) -->
    <input asp-for="AccountId" type="hidden" />

    <!-- Amount -->
    <div class="mb-4">
        <label class="form-label" asp-for="Amount">Amount</label>
        <input class="form-control" asp-for="Amount" type="number" step="0.01" required />
    </div>

    <!-- Symbol -->
    <div class="mb-4">
        <label class="form-label" asp-for="Symbol">Symbol</label>
        <input class="form-control" asp-for="Symbol" type="text" required />
    </div>

    <!-- Operation (Hidden) -->
    <input asp-for="Operation" type="hidden" value="Withdraw" />

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Withdraw</button>
    
    <a asp-controller="Account" asp-action="Details" asp-route-AccountId="@Model.AccountId" class="btn btn-secondary ">
        Back To Accounts
    </a>


</form>

@Html.ValidationSummary()
