@{
}
@model CreateAccountViewModel


@{
    ViewData["Title"] = "Create Account";
}

<h2>Create New Account</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="Balance" value="0" />

    <div class="form-group">
        <label asp-for="Frequency"></label>
        <select asp-for="Frequency" class="form-control">
            <option value="Monthly">Monthly</option>
            <option value="Weekly">Weekly</option>
        </select>
        <span asp-validation-for="Frequency" class="text-danger"></span>
    </div>

    <div class="mt-5">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Details" asp-controller="Customer" asp-route-id="@Model.CustomerId" class="btn btn-secondary">Back to Customer</a>
    </div>

</form>
@Html.ValidationSummary()

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
